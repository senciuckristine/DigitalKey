<?xml version="1.0" encoding="utf-8"?>

<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:scrollbars = "vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="bottom"
    tools:context=".BluetoothConnection">

    <TextView
        android:id="@+id/statusBluetooth"
        android:layout_marginLeft="90dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:gravity="top"
        android:textSize="20sp"
        android:textColor="#000"
         />
    <ImageView
        android:id="@+id/bluetoothImg"
        android:layout_marginLeft="135dp"
        android:layout_width="100dp"
        android:layout_height="100dp" />
    <Button
        android:id="@+id/ButtonOnOff"
        android:layout_marginLeft="85dp"
        android:minWidth="200dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turn On"
        style="@style/TextAppearance.AppCompat.Widget.Button.Colored"/>
    <Button
        android:id="@+id/ButtonDevices"
        android:layout_marginLeft="85dp"
        android:minWidth="200dp"
        android:onClick="discoverDevices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start DigitalKey"
        style="@style/TextAppearance.AppCompat.Widget.Button.Colored"
        tools:ignore="ExtraText" />

    <ListView
        android:id="@+id/listView1"
        android:layout_height="180dp"
        android:layout_width="match_parent">
    </ListView>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:background="@color/teal_700"
        app:itemBackground="@color/teal_700"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:menu="@menu/menu_navigation" />

</LinearLayout>